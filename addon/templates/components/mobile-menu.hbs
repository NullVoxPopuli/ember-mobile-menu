{{#if isOpen}}
  {{set-body-class 'mobile-menu--open'}}
{{/if}}

{{mobile-menu/mask
  isOpen=isOpen
  position=currentPosition
  onClick=(action 'close')
}}

{{#mobile-menu/tray
  width=mobileMenuWidth
  isLeft=isLeft
  position=currentPosition
  onClose=(action 'close')
}}
  {{yield (hash
    link-to=(component 'mobile-menu/link-to' onClick=(action 'close'))
  )}}
{{/mobile-menu/tray}}