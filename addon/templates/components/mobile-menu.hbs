{{#if isOpen}}
  {{set-body-class 'mobile-menu--open'}}
{{/if}}

{{#if maskEnabled}}
  {{mobile-menu/mask isOpen=isOpen position=currentPosition onClick=(action 'close')}}
  {{!--#if isFastBoot}}
    {{#if isOpen}}
      {{#link-to (query-params sideMenuOpen=false) class="mobile-menu__mask" style="opacity: 1;"}}{{/link-to}}
    {{/if}}
  {{/if--}}
{{/if}}

<div class="mobile-menu__tray">
  {{yield (hash
    link-to=(component 'mobile-menu/link-to' onClick=(action 'close'))
  )}}
</div>