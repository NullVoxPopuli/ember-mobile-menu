{{#if isOpen}}
  {{set-body-class "mobile-menu--open"}}
{{/if}}

{{#if maskEnabled}}
  {{mobile-menu/mask
    isOpen=isOpen
    position=relativePosition
    onClick=(action "close")
  }}
{{/if}}

{{#mobile-menu/tray
  width=_width
  isLeft=isLeft
  position=position
}}
  {{yield
    (hash
      link-to=(component "mobile-menu/link-to" onClick=(action "close"))
      actions=(hash
        close=(action "close")
      )
    )
  }}
{{/mobile-menu/tray}}